<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Master's<br> Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apprentices.each do |apprentice| %>
      <tr>
        <td><%= apprentice.name %></td>
        <td><%= apprentice.city %></td>
        <td><%= apprentice.master.name %></td>
        <td>
          <%= link_to apprentice, class: 'btn btn-default' do %>
              <span class="glyphicon glyphicon-search"></span>
              Show
          <% end %>
        </td>
        <td>
          <%= link_to edit_apprentice_path(apprentice), class: 'btn btn-default' do %>
              <span class="glyphicon glyphicon-pencil"></span>
              Edit
          <% end %>
        </td>
        <td>
          <%= link_to apprentice, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
              <span class="glyphicon glyphicon-remove"></span>
              Destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apprentice', new_apprentice_path %>
