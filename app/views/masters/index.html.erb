<h1>Listing masters</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Domain</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @masters.each do |master| %>
      <tr>
        <td><%= master.name %></td>
        <td><%= master.domain %></td>
        <td><%= master.city %></td>
        <td><%= master.state %></td>
        <td>
          <%= link_to master, class: 'btn btn-default' do %>
              <span class="glyphicon glyphicon-search"></span>
              Show
          <% end %>
        </td>
        <td>
          <%= link_to edit_master_path(master), class: 'btn btn-default' do %>
              <span class="glyphicon glyphicon-pencil"></span>
              Edit
          <% end %>
        </td>
        <td>
          <%= link_to master, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
              <span class="glyphicon glyphicon-remove"></span>
              Destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Master', new_master_path %>
