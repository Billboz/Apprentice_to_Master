<%= form_tag search_masters_path, class: 'form' do %>
    <%= text_field_tag "search_query", nil, placeholder: 'Search text' %>
    <%= submit_tag "Search", class: 'btn btn-sm' %>
<%end%>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Domain</th>
      <th>City</th>
      <th>User Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @masters.each do |master| %>
      <tr>
        <td><%= master.name %></td>
        <td><%= master.domain %></td>
        <td><%= master.city %></td>
        <td><%= master.user.name if master.user %></td>
        <td>
          <%= link_to master, class: 'btn btn-default' do %>
              <span class="glyphicon glyphicon-search"></span>
              Show
          <% end %>
        </td>
        <td>
          <%= link_to edit_master_path(master), class: 'btn btn-default' do %>
              <span class="glyphicon glyphicon-pencil"></span>
              Edit
          <% end %>
        </td>
        <td>
          <%= link_to master, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
              <span class="glyphicon glyphicon-remove"></span>
              Destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h4><%= link_to 'New Master', new_master_path %></h4>